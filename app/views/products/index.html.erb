<h1>Products</h1>


<ul>
  <li>
    <% Product.all.each do |product| %>
      <p><%= product.name  %></p>
      <p><%= product.description %></p>
      <p><%= product.price_in_cents %></p>


      <p><%= link_to("reviews", product_url(product.id)) %></p>

    <% end %>
  </li>
</ul>

<p>
  <%= link_to("new product", new_product_url) %>
</p>
