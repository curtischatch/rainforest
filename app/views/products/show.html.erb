<h1>Here are our products</h1>
<p>
  <%= link_to("back to products", products_url)  %> | <%= link_to("edit", edit_product_url)  %> | <%= link_to("delete", product_url, method: :delete, data: {confirm: "Are you sure you want to delete this product?"})  %>
</p>

<ul>
  <li>

    <p><%= @product.name %>, <%= @product.description %>, <%= @product.price_in_dollars %></p>

  </li>
</ul>

<h3>Reviews</h3>
<% if @product.reviews.empty? %>
  <h4>There aren't any reviews</h4>
  <% else %>
    <% @product.reviews.each do |review| %>
      <ul>
        <li>Comment: <%=review.comment %></li>
        <li>Created at: <%= review.created_at %></li>
        <li>Last updated at: <%= review.updated_at %></li>
      </ul>
    <% end %>
<% end %>

<h4>New Review</h4>

 <%= form_for([@product, @review]) do |f| %>
   <% if @review.errors.any? %>
     <div id="error_explanation">
       <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

       <ul>
       <% @review.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
       <% end %>
       </ul>
     </div>
   <% end %>

   <div class="field">
     <%= f.label :comment %><br />
     <%= f.text_area :comment %>
   </div>
   <div class="actions">
     <%= f.submit %>
   </div>
 <% end %>
